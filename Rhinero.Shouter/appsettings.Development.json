{
  "RabbitMQ": {
    "Hostname": "localhost",
    "Port": 5672,
    "VirtualHost": "/",
    "UserName": "shouter",
    "Password": "shouter",
    "PublishQueue": "Rhinero.Shouter.Publish",
    "ReplyQueue": "Rhinero.Shouter.Reply",
    "PrefetchCount": 16,
    "ConcurrentMessageLimit": 16
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "PublishTopic": "Rhinero.Shouter.Publish",
    "PublishGroup": "Rhinero.Shouter.Publish.Group",
    "RequestTopic": "Rhinero.Shouter.Request",
    "RequestGroup": "Rhinero.Shouter.Request.Group",
    "ReplyTopic": "Rhinero.Shouter.Reply",
    "PrefetchCount": 16,
    "ConcurrentMessageLimit": 16,
    "ConcurrentDeliveryLimit": 16,
    "ConcurrentConsumerLimit": 16,
    "Sasl": {
      "Mechanism": "Plain"
    },
    "Ssl": {
      "EnableSslCertificateVerification": false,
      "UseClientCertificate": false
    }
  },
  "Retry": {
    "Strategy": "Interval",
    "RetryCount": 5,
    "IntervalSeconds": 3
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "MassTransit": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "shouter-dev-{0:yyyy.MM.dd}",
          "restrictedToMinimumLevel": "Verbose",
          "bufferFileSizeLimitBytes": 5242880,
          "bufferLogShippingInterval": 5000,
          "bufferRetainedInvalidPayloadsLimitBytes": 5000,
          "autoRegisterTemplate": true,
          "autoRegisterTemplateVersion": "ESv7",
          "emitEventFailure": "WriteToSelfLog"
        }
      },
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "FromMassTransit" ],
    "Properties": {
      "Application": "Rhinero.Shouter"
    }
  }
}